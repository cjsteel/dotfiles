setxkbmap \
    -rules evdev \
    -model pc105 \
    -layout hu \
    -option -option lv3:alt_switch -option terminate:ctrl_alt_bksp \
    -option altwin:swap_lalt_lwin -option altwin:alt_super_win

type "conky" > /dev/null 2>&1 && type "dzen2" > /dev/null 2>&1 && while :; do
    export FG='white'
    export BG='#002b36'
    export FONT='-*-terminus-*-*-*-*-14-*-*-*-*-*-utf8-*'
    export LC_ALL=hu_HU.UTF-8
    (sleep 3 && conky -c $HOME/.conkyrc | dzen2 -e - -x '500' -ta r -fg $FG \
        -bg $BG -fn $FONT) &
    break
done

type "trayer" > /dev/null 2>&1 && trayer --widthtype request --align right \
    --height 32 --transparent true --alpha 0 --tint 0x0B0B0B &

type "skype" > /dev/null 2>&1 && skype &

type "dropbox" > /dev/null 2>&1 && (dropbox stop; dropbox start &)

type "nm-applet" > /dev/null 2>&1 && nm-applet &

type "google-chrome" > /dev/null 2>&1 && (sleep 15 && google-chrome) &

urxvt &
