setxkbmap \
-rules evdev \
-model pc105 \
-layout hu \
-option -option lv3:alt_switch -option terminate:ctrl_alt_bksp \
-option altwin:swap_lalt_lwin -option altwin:alt_super_win

if [ `which conky` -a `which dzen2` ]; then
    export FG='white'
    export BG='#121212'
    export FONT='-*-terminus-*-*-*-*-12-*-*-*-*-*-utf8-*'
    export LC_ALL=hu_HU.UTF-8
    sleep 3 && conky -c $HOME/.conkyrc | dzen2 -e - -x '500' -ta r -fg $FG -bg $BG -fn $FONT &
fi

if [ `which trayer` ]; then
    trayer --widthtype request --align right --height 32 --transparent true \
    --alpha 0 --tint 0x0B0B0B &
    if [ `which skype` ]; then
        skype &
    fi
    if [ `which dropbox` ]; then
        dropbox stop
        dropbox start &
    fi
    if [ `which nm-applet` ]; then
        nm-applet &
    fi
fi

if [ `which google-chrome` ]; then
    google-chrome &
fi
